{% extends 'base.html.twig' %}

{% block title %}Contact Us{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-light mb-4">Contactez-nous</h1>
    
    <div class="row justify-content-center">
        <div class="col-lg-6">
            {{ form_start(form) }}
            
            <div class="form-group mb-3">
                {{ form_label(form.firstname, 'Pr√©nom', {'label_attr': {'class': 'form-label text-light'}}) }}
                {{ form_widget(form.firstname, {'attr': {'class': 'form-control bg-dark text-light border-light'}}) }}
                {{ form_errors(form.firstname) }}
            </div>
            
            <div class="form-group mb-3">
                {{ form_label(form.lastname, 'Nom', {'label_attr': {'class': 'form-label text-light'}}) }}
                {{ form_widget(form.lastname, {'attr': {'class': 'form-control bg-dark text-light border-light'}}) }}
                {{ form_errors(form.lastname) }}
            </div>
            
            <div class="form-group mb-3">
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label text-light'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control bg-dark text-light border-light'}}) }}
                {{ form_errors(form.email) }}
            </div>
            
            <div class="form-group mb-3">
                {{ form_label(form.subject, 'Sujet', {'label_attr': {'class': 'form-label text-light'}}) }}
                {{ form_widget(form.subject, {'attr': {'class': 'form-control bg-dark text-light border-light'}}) }}
                {{ form_errors(form.subject) }}
            </div>
            
            <div class="form-group mb-4">
                {{ form_label(form.message, 'Message', {'label_attr': {'class': 'form-label text-light'}}) }}
                {{ form_widget(form.message, {'attr': {'class': 'form-control bg-dark text-light border-light', 'rows': '5'}}) }}
                {{ form_errors(form.message) }}
            </div>
            
            <div class="d-grid mb-5">
                {{ form_widget(form.send, {'attr': {'class': 'btn btn-light btn-lg'}}) }}
            </div>
            
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

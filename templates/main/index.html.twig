{% extends 'base.html.twig' %} 

    {# ce "extends" peut être compris dans le sens de "require once" ou "include"-->
<!--quand je vais appeler mon "index.html.twig", tous les fichiers contenus dans "base.html.twig" vont s'afficher également dans "index.html.twig"-->
<!--les CDN, css, ect... vont également pouvoir s'appliquer. Du coup, je n'ai plus besoin d'un head avec les CDN ici-->
<!-- cela s'appelle faire de la propagation #}

{% block title %}BABIMEAL{% endblock %} 

{% block body %}
<div class="container">
    <div class="row">
        <!-- Colonne pour le texte de bienvenue -->
        <div class="col-md-6 d-flex align-items-center">
            <div class="welcome-text">
                <p class="presentation">Bienvenue sur le site de notre restaurant! Nous vous invitons à découvrir nos plats délicieux et notre ambiance conviviale.</p>
            </div>
        </div>
        <!-- Colonne pour le carrousel -->
        <div class="col-md-6">
            <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000" data-bs-pause="false">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="{{ asset('divers/images/plat1.jpg') }}" class="d-block w-100 carousel-image" alt="Plat 1">
                    </div>
                    <div class="carousel-item">
                        <img src="{{ asset('divers/images/plat2.jpg') }}" class="d-block w-100 carousel-image" alt="Plat 2">
                    </div>
                    <div class="carousel-item">
                        <img src="{{ asset('divers/images/plat3.jpg') }}" class="d-block w-100 carousel-image" alt="Plat 3">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Précédent</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Suivant</span>
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}